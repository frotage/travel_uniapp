
.photo{
	width: 100%;
}
.compon {
	width: 90%;
	margin: 0 auto;
	margin: 0 auto;
	border: 1px solid #5BC19A;
	border-radius: 5px;
	margin-top: 10px;
}
.img {
	height: 30px;
	width: 30px;
	border-radius: 50%;
	margin: 10px;
}
.name {
	color: #2c405a;
	font-weight: bold;
	font-size: 15px;
	margin-left: 5px;
}
.time {
	font-size: 12px;
	color: #999999;
	margin-left: 25px;
}
.com2 {
	height: 100px;
	width: 90%;
	margin: 0 auto;
	background-color: #edf7fa;
	margin-top: 10px;
	border: 1px solid #5BC19A;
	border-radius: 10px;
	position: relative;
}
.input {
	height: 100px;
	width: 100%;
	border-radius: 5px;
	margin-left: 5px;
	margin-top: 5px;
	padding-right: 20px;
}
.btn {
	height: 25px;
	line-height: 25px;
	width: 60px;
	padding: 0;
	border: 1px solid #fff;
	border-radius: 10px;
	background: #5BC19A;
	color: #ffffff;
	font-size: 15px;
	position: absolute;
	bottom: 2px;
	right: 2px;
	z-index: 10;
}

